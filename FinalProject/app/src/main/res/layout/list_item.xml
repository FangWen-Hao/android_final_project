<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16sp"
            android:theme="@style/ThemeOverlay.AppCompat.Light"/>


        <TextView
            android:id="@+id/snippetListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleListItem"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:padding="8dp" />

        <TextView
            android:id="@+id/latitudeListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/snippetListItem"
            android:textSize="12sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/longitudeListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/latitudeListItem"
            android:textSize="12sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/modeListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/longitudeListItem"
            android:textSize="12sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/addMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/modeListItem"
            android:textSize="12sp"
            android:padding="8dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>